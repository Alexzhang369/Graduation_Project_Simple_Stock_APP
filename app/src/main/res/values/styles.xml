<resources>

    <!-- Base application theme. -->
    <style name="MyToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/theme_background</item>
        <item name="colorPrimary">@color/theme_blue_grey</item>
        <item name="colorPrimaryDark">@color/theme_blue_grey</item>
        <item name="colorAccent">@color/theme_orange</item>
        <item name="android:colorBackground">@color/theme_blue_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <!--<item name="android:actionOverflowMenuStyle">@style/MyOverflowMenuStyle</item>-->
    </style>
    <style name="MyOverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/theme_blue_grey</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">-45dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- styles for FullScreenDialog -->
    <style name="dialog_full_screen" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- styles in MainActivity -->
    <style name="tv_main_activity_navigation_bar">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="tv_main_fragments_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- styles in QuotationsFragment -->
    <style name="tv_quotations_label">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ts_quotations_label</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- styles in QuotationListFragment -->
    <style name="tv_quotation_list_label">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ts_quotation_list_label</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tv_on_quotation_long_click">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/selector_bg_on_quotation_long_click</item>
        <item name="android:textSize">@dimen/ts_on_quotation_long_click</item>
        <item name="android:paddingLeft">@dimen/p_l_r_on_quotation_long_click</item>
        <item name="android:paddingRight">@dimen/p_l_r_on_quotation_long_click</item>
        <item name="android:paddingTop">@dimen/p_t_b_on_quotation_long_click</item>
        <item name="android:paddingBottom">@dimen/p_t_b_on_quotation_long_click</item>
    </style>

    <!-- styles in OldQuotationsFragment -->
    <style name="tv_stock_type">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ts_stock_type</item>
    </style>
    <style name="tv_stock_type.sz" parent="tv_stock_type">
        <item name="android:background">@color/bg_stock_type_sz</item>
    </style>
    <style name="tv_stock_type.sh" parent="tv_stock_type">
        <item name="android:background">@color/bg_stock_type_sh</item>
    </style>

    <style name="tv_stock_current_price">
        <item name="android:textSize">@dimen/ts_stock_current_price</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingRight">@dimen/p_r_stock_current_price</item>
    </style>
    <style name="tv_stock_current_price.green" parent="tv_stock_current_price">
        <item name="android:textColor">@color/tc_stock_green</item>
    </style>
    <style name="tv_stock_current_price.red" parent="tv_stock_current_price">
        <item name="android:textColor">@color/tc_stock_red</item>
    </style>

    <style name="tv_fluctuation_rate">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="tv_fluctuation_rate.green" parent="tv_fluctuation_rate">
        <item name="android:background">@color/bg_stock_fluctuation_rate_green</item>
    </style>
    <style name="tv_fluctuation_rate.red" parent="tv_fluctuation_rate">
        <item name="android:background">@color/bg_stock_fluctuation_rate_red</item>
    </style>

    <!-- styles in QuotationDetailsViewImpl -->
    <style name="layout_quotation_detail">
        <item name="android:layout_marginLeft">@dimen/m_l_layout_quotation_details</item>
        <item name="android:layout_marginRight">@dimen/m_r_layout_quotation_details</item>
    </style>
    <style name="tv_quotation_details_label">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tv_quotation_details_value">
        <item name="android:gravity">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/default_value</item>
    </style>

    <!-- styles in MineFragment -->
    <style name="tv_personal_information">
        <item name="android:layout_marginLeft">@dimen/m_l_tv_personal_information</item>
        <item name="android:minWidth">@dimen/min_w_tv_personal_information</item>
        <item name="android:background">@drawable/selector_bg_tv_personal_information</item>
        <item name="android:textColor">@color/tc_tv_personal_information</item>
        <item name="android:textSize">@dimen/ts_tv_personal_information</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- styles in SettingsFragment -->
    <style name="layout_setting_item">
        <item name="android:minHeight">@dimen/min_h_layout_setting_item</item>
        <item name="android:background">@drawable/selector_bg_setting_item</item>
        <item name="android:paddingLeft">@dimen/p_l_r_setting_item</item>
        <item name="android:paddingRight">@dimen/p_l_r_setting_item</item>
    </style>
    <style name="tv_settings_label">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/ts_setting_item_label</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="v_settings_content">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
