<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_single_quotation"
        app:navigationIcon="@mipmap/ic_arrow_back_white"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/tc_tb"
        app:theme="@style/MyToolBarTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/indicator_single_quotation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_common_navigator"/>
     </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_single_quotation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
