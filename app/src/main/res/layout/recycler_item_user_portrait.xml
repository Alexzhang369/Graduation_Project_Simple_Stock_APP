<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingLeft="@dimen/p_l_r_layout_personal_info_list_item"
                android:paddingRight="@dimen/p_l_r_layout_personal_info_list_item"
                android:id="@+id/layout_list_item_user_portrait"
                android:background="@drawable/selector_bg_alert_dialog_options_item"
                android:paddingTop="@dimen/p_t_b_layout_personal_info_list_item"
                android:paddingBottom="@dimen/p_t_b_layout_personal_info_list_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:text="@string/label_portrait"
        android:textSize="@dimen/ts_personal_info_list_item_label"
        android:textColor="@color/tc_personal_info_list_item_label"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/label_portrait"
        android:id="@+id/img_portrait"
        android:layout_width="@dimen/w_h_personal_info_user_portrait"
        android:layout_height="@dimen/w_h_personal_info_user_portrait"/>
</RelativeLayout>
