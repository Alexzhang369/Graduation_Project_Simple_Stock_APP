<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_information_details"
        app:theme="@style/MyToolBarTheme"
        app:navigationIcon="@mipmap/ic_arrow_back_white"
        app:title="@string/label_information_details"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/MyOverflowMenuStyle"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:background="@color/white"
        android:paddingLeft="@dimen/p_l_r_layout_information_details"
        android:paddingRight="@dimen/p_l_r_layout_information_details"
        android:paddingTop="@dimen/p_t_b_layout_information_details"
        android:paddingBottom="@dimen/p_t_b_layout_information_details"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_information_details_title"
                android:text="@string/default_information_details_title"
                android:textColor="@color/tc_information_details_title"
                android:textSize="@dimen/ts_information_details_title"
                android:layout_marginBottom="@dimen/m_b_information_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_information_details_date_time"
                android:layout_marginBottom="@dimen/m_b_information_details_date_time"
                android:layout_marginRight="@dimen/m_r_information_details_date_time"
                android:textColor="@color/tc_information_details_date_time"
                android:textSize="@dimen/ts_information_details_date_time"
                android:layout_below="@id/tv_information_details_title"
                android:layout_alignLeft="@id/tv_information_details_title"
                android:text="@string/default_information_details_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_information_details_author"
                android:textSize="@dimen/ts_information_details_author"
                android:textColor="@color/tc_information_details_author"
                android:layout_toRightOf="@id/tv_information_details_date_time"
                android:layout_alignBaseline="@id/tv_information_details_date_time"
                android:text="@string/default_information_details_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_information_details"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_information"
                android:contentDescription="@string/label_information_details"
                android:layout_alignLeft="@id/tv_information_details_date_time"
                android:layout_below="@id/tv_information_details_date_time"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/m_b_information_details_image"
                android:layout_height="wrap_content"/>
            <View
                android:layout_below="@id/img_information_details"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <TextView
                android:id="@+id/tv_information_details_content"
                android:textColor="@color/tc_information_details_content"
                android:textSize="@dimen/ts_information_details_content_small"
                android:layout_marginTop="@dimen/m_t_information_details_content"
                android:layout_below="@id/img_information_details"
                android:layout_alignLeft="@id/img_information_details"
                android:text="@string/default_information_details_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
