<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/p_l_r_layout_alert_dialog"
              android:paddingRight="@dimen/p_l_r_layout_alert_dialog"
             style="@style/layout_alert_dialog"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_version_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/btn_alert_dialog"
            android:text="@string/action_update_right_now"
            android:id="@+id/btn_update_right_now"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_put_aside"
            style="@style/btn_alert_dialog"
            android:text="@string/action_put_aside"
            android:layout_alignBottom="@id/btn_update_right_now"
            android:layout_toLeftOf="@id/btn_update_right_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
