<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_vp_information"
        android:contentDescription="@string/label_latest_information"
        android:src="@mipmap/ic_top_latest_information_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_vp_information"
        android:background="@color/bg_tv_vp_information"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/p_l_vp_latest_information_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tv_vp_latest_information"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
