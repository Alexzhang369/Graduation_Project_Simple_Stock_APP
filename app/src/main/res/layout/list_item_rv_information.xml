<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="8dp"
                android:layout_marginBottom="1px"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_rv_information"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="@dimen/w_img_rv_information"
        android:layout_height="@dimen/h_img_rv_information"/>

    <TextView
        android:id="@+id/tv_rv_information_title"
        android:layout_marginStart="12dp"
        android:text="title"
        android:layout_toEndOf="@id/img_rv_information"
        android:layout_alignTop="@id/img_rv_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_rv_information_clock_time"
        android:text="clock time"
        android:layout_alignBottom="@+id/img_rv_information"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
